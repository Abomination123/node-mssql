extends layout

block content

  h1= login
  p Welcome to #{title}
  div#fupdate
    form(action='/groups/save',method='post')
        input(id='idfak',type="hidden", name="idFak", value=idFak)
        input(id='idGroup',type="hidden", name="idGroup", value=idGroup)
        div.form-group
          label(for='name') name
          input(id='name',type='text',value='',placeholder='#{name}',name='name',class="form-control")
        div.form-group
        label(for="course") course
        div
          select(class="form-group form-control", name="course")
            optgroup(label="Bachelor")
              option(value="1" id="i1") 1
              option(value="2" id="i2") 2
              option(value="3" id="i3") 3
              option(value="4" id="i4") 4
            optgroup(label="Master")
              option(value="5" id="i5") 5
              option(value="6" id="i6") 6 
        input(type='submit', value='Save' ,class='btn btn-dark')
  script.
    (function () {
      document.querySelector(`#i${#{course}}`).setAttribute('selected', '');
    })() 